<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.poowercoders.POOwerCoders.vista.FormularioArticuloController">

    <center>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Código:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="campoCodigo" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Descripción:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="campoDescripcion" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Precio Venta:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="campoPrecio" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Gastos de Envío:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="campoEnvio" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Tiempo de Preparación (min):" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="campoPreparacion" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        </GridPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="💾 Guardar" onAction="#guardarArticulo"/>
            <Button text="❌ Cancelar" onAction="#cancelar"/>
        </HBox>
    </bottom>

</BorderPane>


